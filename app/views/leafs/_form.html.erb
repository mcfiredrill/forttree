      <h2><%= pluralize(@leaf.errors.count, "error") %> prohibited this leaf from being saved:</h2>

      <ul>
      <% @leaf.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
