<!DOCTYPE html>
<html>
<head>
  <title>Forttree</title>
  <% theme_basenames.each do |t| %>
    <%= stylesheet_link_tag "themes/" + t, :title => t %>
  <% end %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="themes">
<% theme_basenames.each do |t| %>
  <%= link_to_function t, "set_stylesheet('"+t+"')" %>
<% end %>
</div>
<h1><%= link_to 'FortTree', branches_path %></h1>

<%= yield %>

</body>
</html>
